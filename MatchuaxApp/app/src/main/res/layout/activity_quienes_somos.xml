<?xml version="1.0" encoding="utf-8"?>
<!-- activity_profile.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCFA"
    android:backgroundTint="#F5F5F5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiénes Somos"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="664dp"
        android:layout_gravity="center"
        android:padding="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewIntroduction"
                android:layout_width="304dp"
                android:layout_height="355dp"
                android:layout_marginStart="20dp"
                android:lineSpacingExtra="8dp"
                android:paddingTop="16dp"
                android:text="Hola a todos! Somos Diego, Hugo, Sergio y Mario, un vibrante equipo de estudiantes de segundo de Desarrollo de Aplicaciones Multiplataforma (DAM). Nos hemos unido para dar vida a una experiencia única en nuestra aplicación, donde conocer gente se vuelve emocionante y significativo. En nuestro viaje por el mundo de DAM, nos hemos propuesto transformar la manera en que la gente se conecta. Nuestra aplicación no solo busca presentarte a nuevas personas, sino crear experiencias auténticas y significativas. ¡Acompáñanos en este viaje para descubrir nuevas amistades y construir conexiones inolvidables!"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="28dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="184dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/atras"
                tools:ignore="MissingConstraints"
                android:contentDescription="TODO" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
