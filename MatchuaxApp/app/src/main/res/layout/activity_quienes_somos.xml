<?xml version="1.0" encoding="utf-8"?>
<!-- activity_quienes_somos.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00BCFA"
    android:backgroundTint="#8BDCF6"
    android:padding="16dp"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/titulo_quienes_somos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:text="Quiénes Somos" />

    <!-- Contenido -->
    <TextView
        android:id="@+id/texto_quienes_somos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:text="Bienvenidos a nuestra comunidad de Desarrollo de Aplicaciones Móviles (DAM) en la Universidad Alfonso X el sabio. Somos un equipo apasionado de estudiantes que comparten un interés común en la creación de soluciones innovadoras en el mundo de la tecnología. En particular, hemos creado esta aplicación con el objetivo de facilitar conexiones significativas entre estudiantes dentro del campus.\n\n"
/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="57dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/atras" />
    +

</LinearLayout>